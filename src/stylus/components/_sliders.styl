@import '../bootstrap'
@import '../theme'

/* Theme */
slider($material)
  label
    color: $material.text.secondary

  .vf-slider__track, .vf-slider__track-fill
    background: $material.slider.inactive

  .vf-slider__track__container
    &:after
      border: 1px solid $material.text.primary

  .vf-slider__tick
    border: 1px solid $material.text.primary

  &:not(.vf-input-group--dirty)
    .vf-slider__thumb--label
      background: $material.slider.inactive

    .vf-slider__thumb
      border: 3px solid $material.slider.inactive

    &:focus
      .vf-slider__thumb
        border: 3px solid $material.slider.active

  &.vf-input-group--disabled
    .vf-slider__thumb
      background: none
      border: 3px solid $material.slider.disabled

  &.vf-input-group--disabled.vf-input-group--dirty
    .vf-slider__thumb
      background: $material.slider.disabled
      border: 0px solid transparent

  &:focus
    .vf-slider__track
      background: $material.slider.active

theme(slider, "vf-input-group--slider")

/** Input Group */
.vf-input-group.vf-input-group--slider
  flex-direction: row
  flex-wrap: wrap
  // Allow for right space if inline with other inputs
  padding-right: 16px

  .vf-input-group__details:before, .vf-input-group__details:after
    display: none

  .vf-input-group__input
    flex: 1 1 100%


  label
    flex: 0 1 auto
    width: auto
    align-items: center
    display: inline-flex
    font-size: 18px
    transform: none

    + .vf-input-group__input
      margin-left: 16px
      flex: 1 0 auto

  &.vf-input-group--active
    .vf-slider__thumb
      transform: translateY(-50%) scale(1.2)

    .vf-slider__track
      transition: none

    .vf-slider__thumb-container
      &--label
        .vf-slider__thumb
          transform: translateY(-50%) scale(0)

          &:hover
            transform: translateY(-50%) scale(0)

    .vf-slider__thumb-container, .vf-slider__track-fill
      transition: none

    &.vf-input-group--ticks
      .vf-slider
        &__track__container:after, &__tick
          opacity: 1

  &.vf-input-group--disabled
    pointer-events: none

    .vf-slider__thumb
      transform: translateY(-50%) scale(.5)
      background: transparent

    &.vf-input-group--dirty
      border-color: transparent

  &.vf-input-group--prepend-icon
    .vf-slider
      margin-left: 40px

  &.vf-input-group--append-icon
    .vf-slider
      margin-right: 40px


/** Slider */
.vf-slider
  cursor: default
  display: flex
  align-items: center
  position: relative
  height: 30px
  flex: 1
  user-select: none


/** Thumb/Track/Ticks */
.vf-slider
  &__track__container
    position: absolute
    top: 50%
    transform: translateY(-50%)
    height: 2px
    width: 100%
    overflow: hidden

    &:after
      content: ''
      position: absolute
      right: 0
      top: 0
      height: 2px
      transition: .3s $transition.swing
      width: 2px
      opacity: 0

  &__track, &__thumb, &__tick
    position: absolute
    top: 0

  &__track
    height: 2px
    left: 0
    transition: .3s $transition.swing
    transform-origin: right
    overflow: hidden
    width: 100%

    &-fill
      position: absolute
      left: 0
      height: 2px
      transform-origin: left
      width: 100%
      transition: .3s $transition.swing

  &__ticks-container
    position: absolute
    left: 0
    height: 2px
    width: 100%
    top: 50%
    overflow: hidden

  &__tick
    transition: .3s $transition.swing
    opacity: 0

  &__thumb-container
    position: absolute
    top: 50%
    transition: .3s $transition.swing

  &__thumb
    width: 16px
    height: 16px
    left: -8px
    top: 50%
    border-radius: 50%
    background: transparent
    transition: .3s $transition.swing
    transform: translateY(-50%) scale(.8)
    user-select: none


/** Thumb Label */
.vf-slider
  &__thumb--label__container
    position: absolute
    left: 0
    top: 0
    transition: .3s ease-in-out

  &__thumb--label
    display: flex
    align-items: center
    justify-content: center
    font-size: 12px
    color: #fff
    width: 28px
    height: 28px
    border-radius: 50% 50% 0
    position: absolute
    left: -14px
    top: -40px
    transform: rotate(45deg)
    user-select: none
    transition: .3s ease-in-out

    span
      transform: rotate(-45deg)

  &__track,
  &__track-fill
    position: absolute
