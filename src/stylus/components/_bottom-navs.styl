@import '../bootstrap'

.vf-bottom-nav
  bottom: 0
  box-shadow: 0 3px 14px 2px rgba(#000, .12)
  display: flex
  height: 56px
  justify-content: center
  position: fixed
  transform: translate(0, 60px)
  transition: all .4s $transition.swing
  width: 100%
  z-index: 4

  &--absolute
    position: absolute

  &--active
    transform: translate(0, 0)

  .vf-btn
    background: transparent !important
    border-radius: 0
    box-shadow: none !important
    font-weight: 400
    height: 100%
    margin: 0
    max-width: 168px
    min-width: 80px
    padding: 0px
    text-transform: none
    opacity: .5
    width: 100%

    .vf-btn__content
      height: 100%
      flex-direction: column-reverse
      height: 56px
      font-size: 12px
      transform: scale(1, 1) translate(0, 0)
      white-space: nowrap
      will-change: font-size

      i.vf-icon
        color: inherit
        transition: all .4s cubic-bezier(.25, .8, .50, 1)

    &--active
      opacity: 1

      .vf-btn__content
        font-size: 14px

        &:before
          opacity: 0

        .vf-icon
          transform: none

    &:not(.vf-btn--active)
      filter: grayscale(100%)

  &--shift
    .vf-btn__content
      font-size: 14px

      span
        height: 21px

    .vf-btn
      transition: all .3s
      min-width: 56px
      max-width: 96px

      &--active
        min-width: 96px
        max-width: 168px

.vf-bottom-nav--shift
  .vf-btn:not(.vf-btn--active) .vf-btn__content
    .vf-icon
      transform: scale(1, 1) translate(0, 10px)

    span
      color: transparent
